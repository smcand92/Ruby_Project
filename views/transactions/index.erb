
<h1>Transactions</h1>
<p><a href="/transactions/new">Add New Transaction</a></p>
<table>
  <tr>
    <th>Transaction ID:</th>
    <th>Merchant:</th>
    <th>Tag:</th>
    <th>Amount:</th>
  </tr>
<% for transaction in @transactions%>
<tr>
<td> <%= transaction.id %> </td>
<td> <%= transaction.merchant.name %> </td>
<td> <%= transaction.tag.type %> </td>
<td> <%= transaction.amount %> </td>
<td><a href="/transactions/edit/<%= transaction.id %>">Edit Transaction</a></td>
<td><form method="post" action="/transactions/<%= transaction.id%>/delete">
  <input name="id" type="submit" value="Delete"/></td>
</form>
<%end%>
</tr>
</table>

<h1>Total: <%=@total %></h1>
